<.flash_group flash={@flash} />
<span id="username" class="hidden"><%= @username %></span>
<section class="container mx-5 py-10">
  <article id="message-container" class="mb-10"></article>
  <div class="fixed bottom-5">
    <input id="chat-input" type="text" placeholder="Enter your message here" class="rounded">
    <button id="send-button" class="bg-blue-600 text-white px-5 py-2 rounded">Send</button>
  </div>
</section>
